<%= render partial: 'common/navi' %>

<div class="P_container">
  <!-- プロフィール部分 -->
  <div class="profile">
    <div class="image">
      <%= image_tag current_user.image, :size =>'320x320' , class: "image_p"%>
    <div class="info">
      <div class="name_info">
        <%= @user.name %>
        <div class="actions">
          <% if @user.id == current_user.id %>
          <div class="edit pt-3">
            <%= link_to 'プロフィールを編集する' ,profile_edit_path %>
          </div>
          <% end %>
        </div>
      </div>
      <div class="status pt-3">
        
        <div class="U_senga">
          <p class="posts_count">
            線画投稿数<%= @senga.length %>件
          </p>
          <% if @senga.any? %>
            <% @senga.each do |s| %>
              <%= link_to senga_path(s) do %>
                <div class="box">
                  <%= image_tag (s.image.url + '.png'), class: 'image' %>
                </div>
              <% end %>
            <% end %>
          <% end %>
        </div>
        <div class="alllink">
          <%= link_to '線画を全て表示',senga_list_path() %>
        </div>
        
        <div class="U_paint">
          <p class="posts_count pt-3">
            依頼完遂数<%= @paint.length %>件
          </p>
          <% if @paint.any? %>
            <% @paint.each do |s| %>
              <%= link_to paint_path(s) do %>
                <div class="box">
                  <%= image_tag (s.image.url + '.png'), class: 'image' %>
                </div>
              <% end %>
            <% end %>
          <% end %>
        </div>
        <div class="link">
          <%= link_to '完成品を全て表示',senga_list_path() %>
        </div>
        
      </div>
    </div>
  </div>
  <%= render partial: 'common/footer' %>
</div>