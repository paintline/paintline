<%= render partial: 'common/navi' %>

<!-- 詳細画像 -->    
  <section class="content">
    <div class="container">
      
      <h4 class="card-title text-center">
        <%= @paint.senga.tittle %>
      </h4>
      
    <!-- 画像 -->    
    <%= image_tag (@paint.image.url + '.png'), class: 'show_image' %>
    
      <!-- 画像情報 -->
      <div class="senga_info">
        
        <p class="card-text text-center">
          <div class="box9">
              <span class="box-title">内容</span>
              <%= @paint.description %>
          </div>
          <div class="info">
            <p>線画担当<%= link_to @paint.senga.user.name, profile_path(@paint.senga.user)%></p>
            <p>着色担当<%= link_to @paint.user.name, profile_path(@paint.user)%></p>
            <br>
            
            <% if @paint.user_id != current_user.id %>
              <% if PaintLike.find_by(:user_id => current_user.id , :paint_id => @paint.id )  %>
              　<%= link_to 'お気に入りにから削除' ,paint_like_path(params[:id]), class: "show_btn-square" %>
              <% else %>
              　<%= link_to 'お気に入りに追加' ,paint_like_path(params[:id]) , class: "show_btn-square" %>
              <% end %>
            <% end %>
          
          </div>
        </p>
      </div>
     
    </div>
  </section>

  <%= render partial: 'common/footer' %>